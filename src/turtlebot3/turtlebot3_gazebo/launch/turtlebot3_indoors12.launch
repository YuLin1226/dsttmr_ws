<launch>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="1st_x_pos" default="-2.0"/>
  <arg name="1st_y_pos" default="-0.0"/>
  <arg name="2nd_x_pos" default="-3.0"/>
  <arg name="2nd_y_pos" default="-0.0"/>
  <arg name="z_pos" default="0.0"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/indoors12.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <arg name="robot_name_1" default="first_robot"/>
  <group ns="$(arg robot_name_1)">
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro robotName:=$(arg robot_name_1)"/>
    
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="
      -urdf 
      -model turtlebot3_$(arg model)_$(arg robot_name_1)
      -x $(arg 1st_x_pos) 
      -y $(arg 1st_y_pos) 
      -z $(arg z_pos) 
      -param robot_description" />

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  </group>

  <arg name="robot_name_2" default="second_robot"/>
  <group ns="$(arg robot_name_2)">
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro robotName:=$(arg robot_name_2)"/>
    
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="
      -urdf 
      -model turtlebot3_$(arg model)_$(arg robot_name_2)
      -x $(arg 2nd_x_pos) 
      -y $(arg 2nd_y_pos) 
      -z $(arg z_pos) 
      -param robot_description" />

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  </group>
  
</launch>
